<resources>

    <style name="TextAppearance.AppTheme.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.AppTheme.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Dialog.Alert"
        parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton.Dialog"
        parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton"
        parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton"
        parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/selector_outlined_btn_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">?colorSecondaryVariant</item>
        <item name="strokeColor">@color/selector_outlined_btn</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.AppTheme.Button.UnelevatedButton"
        parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.AppTheme.RadioButton"
        parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/selector_radio_btn_text</item>
        <item name="android:background">@drawable/bg_radio_btn</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Widget.AppTheme.Calendar.RadioButton"
        parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/selector_calendar_date_text</item>
        <item name="android:background">@drawable/bg_calendar_date</item>
        <item name="android:button">@null</item>
    </style>

    <style name="Widget.AppTheme.BottomSheet.Modal"
        parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AppTheme.BottomSheet</item>
        <item name="shapeAppearance">@style/ShapeAppearance.AppTheme.LargeComponent</item>
        <item name="backgroundTint">?colorPrimary</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.OutlinedBox"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="Widget.AppTheme.TextInputEditText.OutlinedBox"
        parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Body1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense"
        parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.AppTheme.TextInputEditText.FilledBox"
        parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:isScrollContainer">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">none|textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="DialogScaleAnimation" >
        <item name="android:windowEnterAnimation">@anim/anim_scale_in</item>
        <item name="android:windowExitAnimation">@anim/anim_scale_out</item>
    </style>

    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_left</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_right</item>
    </style>

    <style name="FragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>
</resources>
