<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bus_trip"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/layout_bus_trip_header"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/text_bus_trip_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline4"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/layout_bus_trip_header"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/layout_bus_trip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/text_bus_trip_dep_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceHeadline6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:src="@drawable/ic_forward_dark_24dp"
                android:tint="@color/colorIconPrimary" />

            <TextView
                android:id="@+id/text_bus_trip_arr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceHeadline6" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ProgressBar
                android:id="@+id/progress_bus_trip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:visibility="gone"
                android:indeterminate="true" />

            <ImageView
                android:id="@+id/image_bus_trip_forward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:src="@drawable/ic_navigate_dark_24dp"
                android:tint="@color/colorIconSecondary" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_bus_trip_seats_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_bus_trip_time"
            android:textAppearance="?textAppearanceBody2" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBackground"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>