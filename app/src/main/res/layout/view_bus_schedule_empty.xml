<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_bus_schedule_empty_state" />

    <TextView
        android:id="@+id/text_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_empty"
        android:layout_margin="4dp"
        android:textAppearance="?textAppearanceHeadline6"
        android:layout_centerHorizontal="true"
        android:text="@string/bus_schedule_empty_title" />

    <TextView
        android:id="@+id/text_empty_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_empty_title"
        android:layout_margin="4dp"
        android:textAppearance="?textAppearanceBody2"
        android:layout_centerHorizontal="true"
        android:text="@string/bus_schedule_empty_message" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_empty_bus_stops"
        style="@style/Widget.AppTheme.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_empty_subtitle"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:text="@string/departure_cities_title" />
</RelativeLayout>