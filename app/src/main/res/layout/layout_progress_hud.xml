<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_progress_hud"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="5">

    <FrameLayout
        android:id="@+id/container_hub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_hub_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/ic_arc_rotate"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <ImageView
            android:id="@+id/image_hub_checkmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:scaleX="1.7"
            android:scaleY="1.7"
            android:src="@drawable/ic_check_mark_dark_24dp"
            android:visibility="gone"
            app:tint="@android:color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_hub_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="bottom"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        tools:ignore="RtlCompat" />
</LinearLayout>